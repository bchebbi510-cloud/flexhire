    <script>
        // DOM elements
        const authLoggedOut = document.getElementById('auth-logged-out');
        const authLoggedIn = document.getElementById('auth-logged-in');
        const logoutBtn = document.getElementById('logoutBtn');
        const googleLoginBtn = document.getElementById('googleLoginBtn');
        const registerBtn = document.getElementById('registerBtn');
        const findWorkBtn = document.getElementById('findWorkBtn');
        const hireTalentBtn = document.getElementById('hireTalentBtn');
        const tabButtons = document.querySelectorAll('.tab-btn');
        const sidebarLinks = document.querySelectorAll('.sidebar-nav a');
        
        // Initialize auth state
        let currentUser = null;
        checkAuthState();
        
        // Check auth state on page load
        function checkAuthState() {
            // In a real app, this would check Firebase auth state
            // For demo purposes, we'll simulate based on localStorage
            const user = localStorage.getItem('flexhire_user');
            if (user) {
                currentUser = JSON.parse(user);
                showLoggedInUI();
            } else {
                showLoggedOutUI();
            }
        }
        
        function showLoggedOutUI() {
            authLoggedOut.classList.remove('hidden');
            authLoggedIn.classList.add('hidden');
        }
        
        function showLoggedInUI() {
            authLoggedOut.classList.add('hidden');
            authLoggedIn.classList.remove('hidden');
            
            // Update user info in dropdown
            if (currentUser) {
                document.getElementById('userName').textContent = currentUser.name || 'User';
                document.getElementById('userEmail').textContent = currentUser.email || '';
                document.getElementById('userAvatar').src = currentUser.pictureUrl || 'https://via.placeholder.com/40';
                document.getElementById('dropdownAvatar').src = currentUser.pictureUrl || 'https://via.placeholder.com/40';
            }
        }
        
        // Handle authentication events
        googleLoginBtn.addEventListener('click', function() {
            // In a real implementation, you would call loginWithGoogle()
            console.log('Google login initiated');
            // Simulate successful login for demo
            const mockUser = {
                name: 'Alex Johnson',
                email: 'alex@example.com',
                pictureUrl: 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YXZhdGFyfGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60',
                role: 'jobseeker'
            };
            localStorage.setItem('flexhire_user', JSON.stringify(mockUser));
            currentUser = mockUser;
            showLoggedInUI();
        });
        
        registerBtn.addEventListener('click', function() {
            // In a real implementation, you would call register()
            console.log('Registration initiated');
            // Simulate successful registration for demo
            const mockUser = {
                name: 'Alex Johnson',
                email: 'alex@example.com',
                pictureUrl: 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YXZhdGFyfGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60',
                role: 'jobseeker'
            };
            localStorage.setItem('flexhire_user', JSON.stringify(mockUser));
            currentUser = mockUser;
            showLoggedInUI();
        });
        
        logoutBtn.addEventListener('click', function() {
            // In a real implementation, you would call logout()
            localStorage.removeItem('flexhire_user');
            currentUser = null;
            showLoggedOutUI();
        });
        
        // Handle CTA buttons
        findWorkBtn.addEventListener('click', function() {
            if (currentUser) {
                window.location.href = '#jobs';
            } else {
                alert('Please sign in to find work');
            }
        });
        
        hireTalentBtn.addEventListener('click', function() {
            if (currentUser) {
                window.location.href = '#dashboard';
            } else {
                alert('Please sign in to hire talent');
            }
        });
        
        // Tab switching
        tabButtons.forEach(button => {
            button.addEventListener('click', function() {
                tabButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Sidebar navigation
        sidebarLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                sidebarLinks.forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Mobile menu toggle
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', () => {
                const navLinks = document.querySelector('.nav-links');
                const authControls = document.querySelector('.auth-controls');
                const heroStats = document.querySelector('.hero-stats');
                
                if (window.getComputedStyle(navLinks).display === 'none') {
                    navLinks.style.display = 'flex';
                    authControls.style.display = 'flex';
                    if (heroStats) heroStats.style.display = 'flex';
                    mobileMenuBtn.innerHTML = '<i class="fas fa-times"></i>';
                } else {
                    navLinks.style.display = 'none';
                    authControls.style.display = 'none';
                    if (heroStats) heroStats.style.display = 'none';
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                }
            });
        }
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            const userMenuButton = document.getElementById('userMenuButton');
            const userDropdown = document.getElementById('userDropdown');
            
            if (userMenuButton && userDropdown && 
                !userMenuButton.contains(e.target) && 
                !userDropdown.contains(e.target)) {
                userDropdown.style.opacity = '0';
                userDropdown.style.visibility = 'hidden';
                userDropdown.style.transform = 'translateY(-10px)';
            }
        });
    </script>
